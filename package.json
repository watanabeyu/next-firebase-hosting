{
  "name": "next-firebase-hosting",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build:clean": "rm -rf dist && mkdir dist && cp package.json dist/package.json",
    "build:development": "npm run build:clean && APP_ENV=development webpack && APP_ENV=development next build",
    "build:production": "npm run build:clean && APP_ENV=production webpack && APP_ENV=production next build",
    "serve:development": "npm run build:development && firebase serve --only functions,hosting --project development",
    "serve:production": "npm run build:production && firebase serve --only functions,hosting --project development",
    "deploy:development": "firebase deploy --only functions:nextApp,hosting:web --project development",
    "deploy:production": "firebase deploy --only functions:nextApp,hosting:web --project production",
    "lint": "eslint",
    "test": "jest"
  },
  "dependencies": {
    "firebase": "^7.19.1",
    "firebase-admin": "^9.1.1",
    "firebase-functions": "^3.11.0",
    "next": "9.5.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recoil": "0.0.10",
    "spectre.css": "^0.5.9",
    "ts-node": "^9.0.0",
    "typestyle": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/next": "^9.0.0",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.3",
    "@types/recoil": "0.0.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.4.2",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.10",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  }
}
